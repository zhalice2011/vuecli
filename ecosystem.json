{
    "apps":[
        {
            "name":"vuecli",
            "script":"./app.js",
            "env":{
                "COMMON_VARIABLE":"true"
            },
            "env_production":{//生产环境的变量
                "NODE_ENV":"production"
            }
        }
    ],
    "deploy":{//部署任务
        "production":{
            "user":"lovezhishu", //这个user表示服务器上来发布应用的角色
            "host":["59.110.225.115"],//主机.多个服务器传入多个ip.只有一台服务器就传入一个ip就行了
            "port":"22",
            "ref":"origin/master", //仓库分支
            "repo": "https://github.com/zhalice2011/vuecli.git",  //仓库地址
            "path": "/www/vuecli/production", //表示部署到服务器的哪一个路径下面
            "ssh_options":"StrictHostKeyChecking=no", //取消key校验
            "post-deploy":"npm install --registry=https://registry.npm.taobao.org && pm2 startOrRestart ecosystem.json  --env  production", //让服务器npm install
            "env":{
                "NODE_ENV":"production"
            }
        }
    }
}
